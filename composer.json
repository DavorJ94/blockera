{
	"name": "blockera/core",
	"description": "A New  Editor experience base on Gutenberg core modules.",
	"type": "library",
	"license": "ISC",
	"autoload": {
		"psr-4": {
			"Blockera\\Framework\\": "app/"
		},
		"files": [
			"app/functions.php",
			"app/Illuminate/Support/helpers.php",
			"app/Illuminate/StyleEngine/helpers.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Blockera\\Framework\\Tests\\": ".dev/tests/phpunit"
		}
	},
	"authors": [
		{
			"name": "The  Contributors"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php": ">=7.4",
		"vlucas/phpdotenv": "^5.5@dev",
		"symfony/dom-crawler": "5.4.x-dev",
		"symfony/css-selector": "5.4.x-dev",
		"voku/simple_html_dom": "dev-master",
		"illuminate/container": "8.x-dev"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^9.5.21",
		"squizlabs/php_codesniffer": "^3.5",
		"wp-cli/wp-cli-bundle": "^2.4",
		"wp-coding-standards/wpcs": "^2.1",
		"wp-phpunit/wp-phpunit": "dev-master",
		"filp/whoops": "^2.15",
		"yoast/phpunit-polyfills": "^2.0@dev",
		"symfony/var-dumper": "5.4.x-dev"
	},
	"config": {
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"cweagans/composer-patches": true
		}
	},
	"scripts": {
		"test": "@php ./vendor/bin/phpunit",
		"lint": "phpcs --standard=phpcs.xml",
		"format": "phpcbf --standard=phpcs.xml --report-summary --report-source",
		"test:coverage": "@php ./vendor/bin/phpunit --coverage-html php-coverage"
	}
}
