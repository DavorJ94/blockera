{
	"name": "@publisher/core",
	"version": "1.0.0",
	"private": true,
	"description": "A new Publisher editor experience base on Gutenberg.",
	"author": "The Publisher Contributors",
	"license": "ISC",
	"keywords": [
		"Publisher",
		"Gutenberg",
		"Full Site Editor",
		"WordPress",
		"editor"
	],
	"homepage": "https://gitlab.com/better-projects/publisher-fse/publisher-core",
	"repository": "git+https://gitlab.com/better-projects/publisher-fse/publisher-core.git",
	"bugs": {
		"url": "https://gitlab.com/better-projects/publisher-fse/publisher-core/-/issues"
	},
	"engines": {
		"node": ">=14.0.0",
		"npm": ">=6.9.0 <7"
	},
	"config": {
		"IS_GUTENBERG_PLUGIN": true,
		"ALLOW_EXPERIMENT_REREGISTRATION": true
	},
	"dependencies": {
		"@publisher/icons": "file:packages/icons",
		"@publisher/controls": "file:packages/controls",
		"@publisher/components": "file:packages/components"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/core": "^7.21.4",
		"@babel/plugin-proposal-export-default-from": "^7.18.10",
		"@babel/preset-flow": "^7.21.4",
		"@jest/core": "^27.4.5",
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/user-event": "^14.4.3",
		"@wordpress/eslint-plugin": "^14.4.0",
		"@wordpress/icons": "^9.21.0",
		"@wordpress/readable-js-assets-webpack-plugin": "^2.13.0",
		"@wordpress/scripts": "^26.1.0",
		"@wordpress/stylelint-config": "^21.13.0",
		"babel-plugin-macros": "^3.1.0",
		"chalk": "^4.1.2",
		"classnames": "^2.2.5",
		"commander": "^8.3.0",
		"copy-webpack-plugin": "^10.2.0",
		"cypress": "^12.7.0",
		"cypress-log-to-output": "^1.1.2",
		"esm": "^3.2.25",
		"expect-puppeteer": "^6.0.2",
		"flow-bin": "^0.203.1",
		"fs": "^0.0.1-security",
		"grunt": "^1.5.2",
		"grunt-contrib-clean": "^2.0.0",
		"grunt-contrib-compress": "^2.0.0",
		"grunt-contrib-copy": "^1.0.0",
		"grunt-shell": "^3.0.1",
		"grunt-text-replace": "^0.4.0",
		"history": "^5.3.0",
		"husky": "^8.0.3",
		"inquirer": "^8.2.0",
		"jest-environment-puppeteer": "^6.0.2",
		"jest-fetch-mock": "^3.0.3",
		"jest-junit": "13.0.0",
		"jest-snapshot": "^27.4.5",
		"jsdom": "^16.7.0",
		"lint-staged": "^12.1.1",
		"lodash": "^4.17.21",
		"matchdep": "^2.0.0",
		"memize": "^1.0.5",
		"pa11y": "^6.2.3",
		"path": "^0.12.7",
		"po2json": "^1.0.0-alpha",
		"prettier": "^2.5.1",
		"prop-types": "^15.8.1",
		"puppeteer": "^13.5.2",
		"rtlcss-webpack-plugin": "^4.0.6",
		"sass": "^1.61.0",
		"sass-loader": "^13.2.2",
		"simple-git": "^3.16.0",
		"source-map-loader": "3.0.0",
		"style-loader": "^3.3.2",
		"tiny-swiper": "^2.2.0",
		"use-immer": "^0.9.0",
		"uuid": "^8.3.2",
		"webpack": "^5.78.0"
	},
	"scripts": {
		"build": "wp-scripts build",
		"format": "wp-scripts format",
		"lint:js": "wp-scripts lint-js",
		"lint:css": "wp-scripts lint-style",
		"lint:php": "composer run lint",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --progress",
		"start:debug": "DEBUG_MODE=on wp-scripts start --progress",
		"packages-update": "wp-scripts packages-update",
		"clean": "rm -rf build dist/* node_modules vendor wordpress",
		"prepare": "husky install",
		"flow": "flow ./src",
		"setup": "yarn install && yarn run build",
		"test:e2e": "cypress run --config video=false --browser chrome",
		"test:e2e:debug": "npx cypress open",
		"test:e2e:headed": "yarn test:e2e --headed",
		"test:e2e:record": "cypress run --browser chrome",
		"test:js": "wp-scripts test-unit-js --config .dev/tests/jest/jest.config.js",
		"test:js:coverage": "yarn test:js --coverage",
		"test:js:update": "yarn test:js -u",
		"version": "grunt version && grunt update-pot"
	},
	"lint-staged": {
		"*.{js,json,ts,tsx,yml,yaml}": [
			"wp-scripts format"
		],
		"*.{js,ts,tsx}": [
			"wp-scripts lint-js"
		],
		"*.scss": [
			"wp-scripts lint-style"
		]
	}
}
